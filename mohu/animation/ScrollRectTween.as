package mohu.animation {	import flash.display.DisplayObject;	import flash.geom.Rectangle;	public class ScrollRectTween extends Animation {		private static const RECTANGLE_PROPERTIES:Array = ["x", "y", "width", "height"];		private static const PROPERTY_PREFIX:String = "scrollRect.";
		private var _currentRectangle:Rectangle;		public function ScrollRectTween(target:DisplayObject, rectangle:Rectangle, frames:uint, easing:Function = null, roundValues:Boolean = true) {						var properties:Object = {};			for each (var property:String in RECTANGLE_PROPERTIES) properties[PROPERTY_PREFIX + property] = rectangle[property];						super(target, properties, frames, easing, roundValues);			_currentRectangle = new Rectangle();		}		override protected function _applyChange(property:String, value:Number, finalProperty:Boolean):void {			_currentRectangle[property.substr(PROPERTY_PREFIX.length)] = value;			if (finalProperty) (target as DisplayObject).scrollRect = _currentRectangle;		}		override protected function _getInitialValue(property:String):Number {			return (this.target as DisplayObject).scrollRect[property.substr(PROPERTY_PREFIX.length)];		}	}}