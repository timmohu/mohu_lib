package mohu.core.invalidation {	import flash.events.EventDispatcher;	public class InvalidationClient extends EventDispatcher implements IInvalidationClient {		private var _isInvalid:Boolean;		public function InvalidationClient() {			super(null);		}						public function destroy():void {			if (Invalidator.invalidationList.indexOf(this) != -1) Invalidator.remove(this);		}						public function forceImmediateUpdate():void {			_isInvalid = false;		}						public function invalidate():void {			_isInvalid = true;			Invalidator.add(this);		}						public function get isInvalid():Boolean {			return _isInvalid;		}	}}