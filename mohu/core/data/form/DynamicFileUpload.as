package mohu.core.data.form {	import flash.utils.ByteArray;	public class DynamicFileUpload {		private var _baData:ByteArray;		private var _filename:String;		public function DynamicFileUpload( data:ByteArray, filename:String = null ) {			this.data = data;			this.filename = filename;		}						public function get data():ByteArray {			return _baData;		}						public function get filename():String {			return _filename;		}						public function set data( value:ByteArray ):void {			_baData = (value ? value : new ByteArray());		}						public function set filename( value:String ):void {			_filename = (value ? value : Math.round(Math.random() * uint.MAX_VALUE).toString(16) );		}	}}